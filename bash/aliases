#!/bin/bash

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
else
	alias ls='ls -G'
fi

alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

alias unexecute="find . -iname '*.js' -or -iname '*.html' -or -iname '*.css' -or -iname '*.jpg' -or -iname '*.png' -or -iname '*.gif' -exec chmod -x {} \;"

function lsq() {
  ls -lh $@ | tr -s ' ' | cut -d' ' -f5,8
}

# Count lines in a project
function lines() {
  find . -type f -exec wc -l {} \; | tr -s ' ' | cut -d ' ' -f 2 | awk '{a+=$0}END{print a}'
}

function take {
  mkdir $1
  cd $1
}

# Show most used commands from bash history
function usage {
  history | awk '{a[$2]++}END{for(i in a){print a[i] " " i}}' | sort -rn | head
}

# Usage .. [n]
function .. (){
  local arg=${1:-1};
  local dir=""
  while [ $arg -gt 0 ]; do
    dir="../$dir"
    arg=$(($arg - 1));
  done
  cd $dir #>&/dev/null
}

alias s="apt-cache search"
alias i="sudo apt-get install"
alias r="rails"
alias j="jruby -S "
# TODO - add condition for Ubuntu
# alias e="redcar"

### Git ###
alias git=hub

function gg() {
  git commit -v -a -m "$*"
}

alias ga="git add --all"
alias gc="git commit -v"
alias gp="git push"
alias gs="git status"
alias gst="git status"
alias gb="git branch"
alias gba="git branch -a"
alias gl="git pull"
alias gd="git diff"
alias gco="git checkout"


# IP related stuff
alias myip="dig +short myip.opendns.com @resolver1.opendns.com"
alias flush="dscacheutil -flushcache"

alias gzip="gzip -9n"
alias ql="qlmanage -p 2>/dev/null" # preview a file using QuickLook

alias branches='git log --graph --full-history --all --color  --pretty=format:"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%s"'
