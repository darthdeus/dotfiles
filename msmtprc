defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

account      gmail
host         smtp.gmail.com
port         587
from         darthdeus@gmail.com
user         darthdeus
passwordeval "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.msmtp_gmail.gpg"

account default : gmail
