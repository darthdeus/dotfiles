# vim: filetype=muttrc
# Sorts folders in sidebar alphabetically
#set sidebar_sort=yes

set sidebar_width    = 30

set sidebar_format = "%B%?F? [%F]?%* %?N?%N/?%S"

set sidebar_sort_method = 'alpha'
set sidebar_visible = yes
set sidebar_folder_indent=yes              # Indent folders whose names we've shortened
set sidebar_indent_string='   '          # Indent with two spaces
# set sidebar_short_path                  # Shorten mailbox names

# set sidebar_divider_char = ' â”‚ '
set sidebar_delim_chars='/.'

# sidebar_whitelist '~/.mail/gmail/inbox'
# sidebar_whitelist '~/.mail/icloud/inbox'
sidebar_whitelist '~/.mail/<>/inbox'
sidebar_whitelist '~/.mail/<>/sent'
