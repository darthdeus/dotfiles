set my_name   = "Jakub Arnold"
set from      = "jakub.arnold@me.com"

set folder    = ~/.mail
set spoolfile = +icloud/inbox
set postponed = +icloud/drafts
set record    = +icloud/sent
set trash     = +icloud/trash

mailboxes =icloud/inbox =icloud/drafts =icloud/sent =icloud/trash

set sendmail = "msmtp -a icloud"

